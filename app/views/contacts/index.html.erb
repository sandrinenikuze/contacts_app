<h1>All Contacts</h1>

<div class="row">
  <% @contacts.each_slice(3) do |three_contacts| %>
    <div class="row">
      <% three_contacts.each do |contact| %>
        <div class="col-md-3">
          <h2><%= link_to "#{contact.first_name} #{contact.last_name}", "/contacts/#{contact.id}" %></h2>
          <h3>Email: <%= contact.email %></h3>

          <h3>Phone: <%= contact.phone_number %></h3>
        </div>
      <%end%>
    </div>
  <%end%>
</div>


 
